<div class="bloc_user" id="user_<%= user.id %>">
  <div class="user_image"><img src="<%= user.photo %>"></div>
  <div class="user_data"> 
    <div class="user_name">
      <%= link_to user_path(user) do %>
        <h3><%= user.name%></h3>
      <% end %>
    </div>
    <div class="user_posts">Number of posts: <%= user.posts_counter %></div>
  </div>
</div>